
require 'echoe'

Echoe.new("fauna-mysql") do |p|
  p.author = "Evan Weaver"
  p.project = "fauna"
  p.summary = "The MySQL API module for Ruby, with Twitter fixes."
  p.url = "http://github.com/evan/mysql/"
  p.docs_host = "evan.github.com/fauna/"
end

